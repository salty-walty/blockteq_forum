<div class="panel panel-default">

<div class="panel-heading"> 
  <h1>Posts</h1>
</div>

  <div class="panel-body">
  
    <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Blog entry</th>
            <th colspan="3"></th>
          </tr>
        </thead>
      

        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= post.title %></td>
              <td>by <%= link_to post.user.username, user_posts_path(name: post.user.username) %></td>
              <td><%= post.blog_entry %></td>
              <td><%= link_to 'Show', post %></td>
            </tr>
          <% end %>
        </tbody>
    </table>
  </div>  
</div>


<br>

<%= link_to 'New Post', new_post_path %>