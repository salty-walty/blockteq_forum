<p id="notice"><%= notice %></p>

<div class="panel panel-default">
	<div class="panel-heading">	
		
		  <strong>Title:</strong>
		  <%= @post.title %>

		  <strong>Author:</strong>
		  <%= @post.user.username %>
		  <%= image_tag @post.user.avatar.url, size:30 %>

	</div>
	
	<div class="panel-body">
		<p>
		  <strong>Blog entry:</strong>
	
		  <%= @post.blog_entry.html_safe %>
		</p>
	</div>
	
	<div class="panel-footer">	
		<% if @post.id == current_user.id%>
			<%= link_to 'Edit', edit_post_path(@post) %> |
			<%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' } %> |
		<% end %>
			<%= link_to 'Back', posts_path %>

	<div id="comments">

    <%= render 'comments/form', comment: @comment %>

	<div class="panel panel-default">
	    <% @post.comments.each do |comment| %>
	        <div class="panel-heading">
		    <%= link_to comment.user.username, user_posts_path(name: comment.user.username) %> said...<br />
	        </div>
	        <div class="panel-body">
	        	
		    <%= comment.comment_entry %>
	        </div>

	        <div class="panel-footer">
	        	<%= link_to 'Reply', new_comment_path(:parent_id => comment) %>
	        </div>
	    <% end %>
	</div>

	</div>

	</div>
</div>
